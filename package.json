{
  "name": "metalsmith-blog-lists",
  "version": "1.6.0",
  "description": "A Metalsmith plugin to add blog lists to metadata.",
  "keywords": [
    "metalsmith-blog-lists",
    "metalsmith-plugin",
    "metalsmith",
    "static-site"
  ],
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wernerglinka/metalsmith-blog-lists.git"
  },
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "author": "Werner Glinka (https://glinka.co)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wernerglinka/metalsmith-blog-lists/issues"
  },
  "homepage": "https://github.com/wernerglinka/metalsmith-blog-lists#readme",
  "devDependencies": {
    "@metalsmith/layouts": "^3.0.0",
    "auto-changelog": "^2.5.0",
    "c8": "^10.1.3",
    "chai": "^5.2.0",
    "debug": "^4.4.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "globals": "^16.0.0",
    "jstransformer-nunjucks": "^1.2.0",
    "metalsmith": "^2.6.3",
    "metalsmith-in-place": "^4.4.2",
    "microbundle": "^0.15.1",
    "mocha": "^11.1.0",
    "prettier": "^3.5.3",
    "release-it": "18.1.2"
  },
  "peerDependencies": {
    "metalsmith": "^2.5.1"
  },
  "scripts": {
    "coverage": "npm test && c8 report --reporter=text-lcov > ./coverage.info",
    "build": "microbundle --entry src/index.js --output lib/index.js --target node -f esm,cjs --strict --generateTypes=false",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"**/*.{js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "update-coverage": "node scripts/update-coverage-badge.js",
    "prerelease": "npm run update-coverage",
    "release": "npm run build && node -r dotenv/config ./node_modules/.bin/release-it .",
    "release:check": "npm run lint:check && npm run build && node -r dotenv/config ./node_modules/.bin/release-it . --dry-run",
    "test": "c8 --reporter=lcov --reporter=text mocha test/**/*.mjs -t 15000",
    "test:debug": "DEBUG=metalsmith-blog-list:* npm test",
    "test:e2e": "serve -l 3000 test/fixtures",
    "depcheck": "depcheck"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "dotenv": "^16.4.7"
  }
}
